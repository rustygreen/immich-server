TZ=America/New_York

DB_PASSWORD=change-me-now

# Storage Configuration
# Originals & backups stored on NAS
UPLOAD_LOCATION=/mnt/photos/immich
BACKUP_LOCATION=/mnt/photos/backups

# Local SSD cache (thumbnails, transcodes) - created automatically
# Location: /srv/immich/{thumbs,encoded-video,upload,profile}

ACME_EMAIL=you@example.com
DOMAIN=photos.example.com
CF_API_TOKEN=cloudflare-dns-api-token
TUNNEL_TOKEN=cloudflare-tunnel-token

# ============================================
# Machine Learning Configuration
# ============================================
# For single-node setup (default): leave ML_URL commented out
# For multi-node setup: set ML_URL to your ML node's address
# ============================================

# ML_URL=http://192.168.1.101:3003  # Uncomment for remote ML node
ML_PORT=3003                         # Port to expose ML service (for ML node)
ML_MEMORY=4G                         # Memory limit for ML container

# Import script settings
IMMICH_API_KEY=your_immich_api_key_here
IMPORT_DIR=/mnt/photos/upload
IMPORT_IMMICH_URL=http://immich:2283
IMPORT_DELAY=30
IMPORT_DELETE_ON_SUCCESS=false
IMPORT_DOCKER_NETWORK=homelab_default

# ============================================
# Import Watch Folders (Multi-User Auto-Import)
# ============================================
# Add one line per user: IMPORT_USER_<NAME>=<api_key>
# Get API keys from: Immich → Account Settings → API Keys
# Folder names are lowercase usernames
# ============================================

# IMPORT_USER_JOHN=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# IMPORT_USER_MARY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# IMPORT_USER_MAX=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Import watch settings (optional)
# IMPORT_WATCH_DIR=/srv/immich/import
# IMPORT_SCAN_INTERVAL=30
# IMPORT_DELETE_AFTER=true

# ============================================
# Proton Drive Backup (Multi-User Cloud Backup)
# ============================================
# Backup each user's photos to their own Proton Drive.
# Requires rclone with protondrive remotes configured.
#
# 1. Install rclone: curl https://rclone.org/install.sh | sudo bash
# 2. Configure a remote for each user:
#    rclone config -> name: proton_john, type: protondrive
# 3. Get Immich user IDs from: Admin → Users → click user → ID in URL
# ============================================

# PROTON_USER_JOHN=john@proton.me
# PROTON_USER_MARY=mary@protonmail.com
# PROTON_IMMICH_ID_JOHN=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# PROTON_IMMICH_ID_MARY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Proton backup settings (optional)
# IMMICH_LIBRARY=/srv/immich/library
# PROTON_DEST_FOLDER=Photos/Immich
# PROTON_LOG_FILE=/var/log/proton-backup.log
