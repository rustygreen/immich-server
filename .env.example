TZ=America/New_York

DB_PASSWORD=change-me-now

# Storage Configuration
# Originals & backups stored on NAS
UPLOAD_LOCATION=/mnt/photos/immich
BACKUP_LOCATION=/mnt/photos/backups

# Local SSD cache (thumbnails, transcodes) - created automatically
# Location: /srv/immich/{thumbs,encoded-video,upload,profile}

ACME_EMAIL=you@example.com
DOMAIN=photos.example.com
CF_API_TOKEN=cloudflare-dns-api-token
TUNNEL_TOKEN=cloudflare-tunnel-token

# ============================================
# Machine Learning Configuration
# ============================================
# For single-node setup (default): leave ML_URL commented out
# For multi-node setup: set ML_URL to your ML node's address
# ============================================

# ML_URL=http://192.168.1.101:3003  # Uncomment for remote ML node
ML_PORT=3003                         # Port to expose ML service (for ML node)
ML_MEMORY=4G                         # Memory limit for ML container

# Import script settings
IMMICH_API_KEY=your_immich_api_key_here
IMPORT_DIR=/mnt/photos/upload
IMPORT_IMMICH_URL=http://immich:2283
IMPORT_DELAY=30
IMPORT_DELETE_ON_SUCCESS=true
IMPORT_DOCKER_NETWORK=homelab_default
